package calculator;

public class Functions {
	public static int factorial(int n) {
		int Answer;
		if(n == 0 || n == 1) {
			Answer = 1;
		} else {
			Answer = 1;
			for (int i = 2; i <= n; i++) {
				Answer *= i; 
			}
		}
		return Answer;
	}
	
	public static int sumFactorial(int firstDoubleValue, int secondDoubleValue) {
		return Functions.factorial(firstDoubleValue) + Functions.factorial(secondDoubleValue);
	}
}