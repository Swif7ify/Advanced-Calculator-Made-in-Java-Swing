// RoundedButton.java
package calculator;

import javax.swing.JButton;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.RenderingHints;
import java.awt.geom.RoundRectangle2D;

public class RoundedButton extends JButton {

    private static final long serialVersionUID = 1L;

    public RoundedButton(String text, Color bgColor, Color fgColor) {
        setText(text);
        setBackground(bgColor);
        setForeground(fgColor);
        setFocusPainted(false); // Remove focus border
        setContentAreaFilled(false); // Remove the default button filling
        setOpaque(false); // Make the button transparent for the custom painting
    }

    @Override
    protected void paintComponent(Graphics g) {
        Graphics2D g2 = (Graphics2D) g.create();
        
        // Enable anti-aliasing for smoother edges
        g2.setRenderingHint(RenderingHints.KEY_ANTIALIASING, RenderingHints.VALUE_ANTIALIAS_ON);
        
        // Set background color and draw the rounded button
        g2.setColor(getBackground());
        g2.fill(new RoundRectangle2D.Double(0, 0, getWidth(), getHeight(), 30, 30)); // Change 30 for more/less roundness
        
        // Paint the text
        super.paintComponent(g2);
    }
}
