package calculator;

public class Functions {
	public static int factorial(double firstDoubleValue) {
		int Answer;
		if(firstDoubleValue == 0 || firstDoubleValue == 1) {
			Answer = 1;
		} else {
			Answer = 1;
			for (int i = 2; i <= firstDoubleValue; i++) {
				Answer *= i; 
			}
		}
		return Answer;
	}
	
	public static int sumFactorial(double firstDoubleValue, double secondDoubleValue) {
		return Functions.factorial(firstDoubleValue) + Functions.factorial(secondDoubleValue);
	}
	
	public static int divideFactorial(double firstDoubleValue, double secondDoubleValue) {
		return Functions.factorial(firstDoubleValue) / Functions.factorial(secondDoubleValue);
	}
	
	public static double summation(double firstValue, double secondValue, double thirdValue) {
		int start = (int) firstValue;
		int end = (int) secondValue;
		int constant = (int) thirdValue;
		int sum = 0;
		if (constant == 0 || constant == 1) {
			for (int n = start; n <= end; n++) {
				sum += n;
			}
		} else {
			for (int n = start; n <= end; n++) {
				sum +=constant;
        	}
		}
		return sum;
	}
}