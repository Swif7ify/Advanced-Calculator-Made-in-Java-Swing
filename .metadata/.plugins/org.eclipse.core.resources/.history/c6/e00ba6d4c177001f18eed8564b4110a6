package calculator;

public class Functions {
	public static int factorial(double firstDoubleValue) {
		int Answer;
		if(firstDoubleValue == 0 || firstDoubleValue == 1) {
			Answer = 1;
		} else {
			Answer = 1;
			for (int i = 2; i <= firstDoubleValue; i++) {
				Answer *= i; 
			}
		}
		return Answer;
	}
	
	public static int sumFactorial(double firstDoubleValue, double secondDoubleValue) {
		return Functions.factorial(firstDoubleValue) + Functions.factorial(secondDoubleValue);
	}
}